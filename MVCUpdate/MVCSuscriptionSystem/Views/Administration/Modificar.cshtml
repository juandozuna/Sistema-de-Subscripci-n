@using MVCSuscriptionSystem.Models
@model MVCSuscriptionSystem.Models.ApplicationUser

@{
    ViewBag.Title = "Modificar";
    MVCSuscriptionDatabseEntities db = new MVCSuscriptionDatabseEntities();
    var perfiles = db.Perfiles.ToList();
    var userPerfil = db.PerfilUsuarios.SingleOrDefault(x => x.userId == Model.Id);
}

<h1 class="display-4 text-center">Modificar al Usuario</h1>

<h2>@Model.UserName | <span class="text-muted">@Model.Email</span></h2>
<h3>Perfil: <span class="text-muted">@userPerfil.Perfile.nombrePerfil</span></h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.Id);
    <h1 class="text-capitalize text-center">Eliga el perfil que desea asignarle a este usuario</h1>
    foreach (var item in perfiles)
    {
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="perfileSelection" value="@item.PerfilID" id="perfil-@item.PerfilID"/>
                @item.nombrePerfil
            </label>
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </div>
}

