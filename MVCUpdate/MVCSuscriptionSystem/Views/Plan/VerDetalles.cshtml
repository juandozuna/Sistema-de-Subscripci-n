@using MVCSuscriptionSystem.Models
@model MVCSuscriptionSystem.Models.Plan

@{
    ViewBag.Title = "Ver Detalles";
}

<h2 class="display-4 text-center">Ver Detalles</h2>

<div>
    <h4>Plan</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

    </dl>
    <h1>Servicios en el Plan</h1>
    <ul class="list-group">
    @foreach (ServicioEnPlan sp in Model.ServicioEnPlans)
    {
        <li class="list-group-item">@sp.Servicio.Nombre | @sp.Servicio.Precio</li>   
    }
    </ul>
</div>
<p>
    @Html.ActionLink("Edit", "Modificar", new { id = Model.PlanID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
